@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .map
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
  .infobox
    position absolute
    top 0px
    right 0px
    width 300px
    height 70px
    background lighten(ColorHeading, 99%)
    border-left 1px solid ColorHeading
    border-bottom 1px solid ColorHeading
    box-shadow 0px 0px 6px ColorHeading
    border-bottom-left-radius 5px
    p
      margin 0px
      padding 13px 18px
