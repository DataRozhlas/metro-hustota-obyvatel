@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
  @import GraphTip
  @import Legend
  @import EmbedLogo
.ig
  .map
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
  .infobox
    position absolute
    top 0px
    right 0px
    width 280px
    background lighten(ColorHeading, 99%)
    border-left 1px solid ColorHeading
    border-bottom 1px solid ColorHeading
    box-shadow 0px 0px 6px ColorHeading
    border-bottom-left-radius 5px
    ul
      list-style-type none
      padding 0px
      margin 18px 0px 0px 0px
      float left
      li
        padding 0px
        margin 0px
        float left
        &:first-child
          margin-left 18px
        label
          border 1px solid lighten(ColorHeading, 80%)
          background white
          padding 2px 10px
          margin-left -1px
          position relative
          z-index 1
          &:hover
            cursor pointer
            background lighten(ColorHeadingLink, 99%)
            border-color lighten(ColorHeadingLink, 60%)
            z-index 2
        &:first-child label
          border-top-left-radius 3px
          border-bottom-left-radius 3px
        &:last-child label
          border-top-right-radius 3px
          border-bottom-right-radius 3px
        input
          visibility hidden
          position absolute
          left -5000px
          &:checked+label
            background lighten(ColorHeadingLink, 97%)
            border-color ColorHeadingLink
            z-index 3


    p
      float left
      width 100%
      margin 0px
      padding 13px 18px
